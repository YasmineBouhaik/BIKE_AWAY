<div class="container">
  <%= simple_form_for(@itinerary) do |f| %>
    <%= f.input :title %>
    <%= f.input :km %>
    <%= f.input :category, as: :radio_buttons,
                          collection: ["family", "road bike", "mountain bike"],
                          collection_wrapper_tag: 'div',
                          collection_wrapper_class: 'category-wrapper',
                          item_wrapper_class: 'category-item',
                          input_html: {class: 'category-selector'},
                          collection: Itinerary::CATEGORIES %>
                          
    <%= f.input :description %>
    <input type="text" id="input">
    <input type="button" value="Add step" id="addstep">
    <ol class="hidden-form"></ol>
    <% unless @steps.nil? %>
      <ol>
      <% @steps.each do |step| %>
        <li><%= step.address %>
          <%= link_to step_path(step), method: :delete do %>
          <i class="fas fa-trash"></i>
          <% end %>
        </li>
      <% end  %>
      </ol>
    <% end %>
    <%= f.submit class:"btn btn-Join" %>
  <% end %>
</div>

<div class = "top-div">
  <h1>Rides</h1>
</div>

<div class="container p-3">
  <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  </form>


  <div class = "rides-index">
    <div class = "ride-card row">
      <% @rides.each do |ride|  %>
      <div class="col-sm-12 col-lg-4 m-3">
        <div class = "card p-3">
          <div class = "card-title d-flex align-items justify-content-start">
            <%= image_tag current_user.url, alt: "user image", class: "avatar mr-3" %>
            <h3> <%= ride.date %> </h3>
          </div>
          <div class = "card-text d-flex align-items justify-content-between px-3">
            <p> <%= ride.itinerary.km %> </p>
            <p> <% if ride.itinerary.category == "family" %>
              <%= image_tag "family bike.png", class: "logo-category family-logo" %>
              <% elsif ride.itinerary.category == "road bike" %>
              <%= image_tag "road bike.png", class: "logo-category" %>
              <% elsif ride.itinerary.category == "mountain bike" %>
              <%= image_tag "mountain bike.png", class: "logo-category" %>
              <% end %>
            </p>
          </div>
          <div class = "details-button d-flex">
            <%= link_to "details", ride_path(ride), class: "btn btn-outline-primary ml-auto p-2" %>
          </div>
      </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
